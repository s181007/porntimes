--track0:ï‚ê≥X,-5000,5000,0
--track1:ï‚ê≥Y,-5000,5000,0
--track2:ï‚ê≥Z,-5000,5000,0
--track3:ï‚ê≥ï˚ñ@,1,3,1,1
  local dx=obj.track0
  local dy=obj.track1
  local dz=obj.track2
  local cam = obj.getoption("camera_param")

  if AND(obj.track3,1)==1 then
    cam.x=cam.x+dx
    cam.y=cam.y+dy
    cam.z=cam.z+dz
  end
  if SHIFT(obj.track3,-1)==1 then
    cam.tx=cam.tx+dx
    cam.ty=cam.ty+dy
    cam.tz=cam.tz+dz
  end
  obj.setoption("camera_param",cam)
